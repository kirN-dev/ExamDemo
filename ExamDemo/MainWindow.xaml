<Window
	x:Class="ExamDemo.MainWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:ExamDemo"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	Title="MainWindow"
	Width="800"
	Height="450"
	mc:Ignorable="d">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition />
			<RowDefinition Height="50" />
			<RowDefinition Height="50" />
		</Grid.RowDefinitions>

		<ListBox x:Name="lbEmployees" Margin="50" />

		<Button Grid.Row="1" Click="GetSalary_Click">Зарплата</Button>
		<Button Grid.Row="2" Click="GetTotalSlary_Click">Общая зарплата</Button>
	</Grid>
</Window>
